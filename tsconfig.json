{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es7"
    ], 
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "strict": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}